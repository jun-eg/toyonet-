{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter":{
		"enabled": true,
		"indentStyle":"tab",
		"lineWidth":120,
		"indentWidth":2,
		"attributePosition":"auto",
		"formatWithErrors": false
	},
	"javascript":{
		"formatter":{
			"arrowParentheses":"always",
			"bracketSameLine": false,
			"bracketSpacing": false,
			"jsxQuoteStyle":"double",
			"quoteProperties":"asNeeded",
			"trailingComma":"all",
			"semicolons":"asNeeded"
		}
	},
	"json":{
		"formatter":{
			"trailingCommas":"none"
		}
	}

}
